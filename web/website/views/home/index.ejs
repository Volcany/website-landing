<div class="container-full">
	<div id="pnlSuccessAlert" class="alert alert-success text-center" style="display:none; position:absolute; width:100%">
		<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		<div id="pnlSuccessAlertMessage"></div>
	</div>
	<div id="pnlErrorAlert" class="alert alert-danger text-center" style="display:none;position:absolute; width:100%">
		<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		<div id="pnlErrorAlertMessage"></div>
	</div>
	<div class="row">
		<div class="col-lg-12 text-center v-center">
			<h1>Volcany</h1>
			<p class="lead">Open Business Intelligence Tools</p>
			<br/><br/><br/>
	  
			<form class="col-lg-12" action="#">
				<p>Do you want more details?</p>
				<br/>
				<div class="input-group" style="width:340px;text-align:center;margin:0 auto;">
					<input id="inpEmail" name="email" class="form-control input-lg" title="Don't worry. We hate spam, and will not share your email with anyone." placeholder="Enter your email address" type="text" maxlength="255">
					<span class="input-group-btn"><button id="btnSubmit" class="btn btn-lg btn-primary" type="submit">OK</button></span>
				</div>
			</form>
        </div>
	<div>
</div>
<script>
	$(document).ready(function() {
		$('#inpEmail').focus();
	});	
	$('form').submit(function() {
		return false;
	});
	$('#btnSubmit').click(function() {
		$.post('/contact/create', { email: $('#inpEmail').val() }, function (data) {
			if (data.status === 'OK') {
				$('#pnlSuccessAlertMessage').html(data.message);
				$('#pnlErrorAlert').hide();
				$('#pnlSuccessAlert').show();
			}
			else {
				$('#pnlErrorAlertMessage').html(data.message);
				$('#pnlSuccessAlert').hide();
				$('#pnlErrorAlert').show();
			}
		}, 'json');
	});
</script>